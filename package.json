{
    "name": "testtodo",
    "version": "1.0.0",
    "description": "",
    "homepage": "https://github.com/Vanilio1997.github.io/todo-test",
    "main": "index.js",
    "scripts": {
        "prepare": "node -e \"if (process.env.NODE_ENV !== 'production' && process.env.VERCEL !== '1') require('husky').install()\"",
        "vercel-build": "npm install --ignore-scripts && npm run build",
        "build": "webpack --env mode=production",
        "build:dev": "webpack --env mode=development",
        "build:prod": "webpack --env mode=production",
        "build:desktop": "webpack --env mode=production --env platform=desktop",
        "build:mobile": "webpack --env mode=production --env platform=mobile",
        "deploy": "gh-pages -d build",
        "start": "webpack serve --env mode=development",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ],
        "moduleNameMapper": {
            "^.+\\.(svg)$": "<rootDir>/__mocks__/svgMock.js",
            "^@/(.*)$": "<rootDir>/src/$1",
            "\\.module\\.css$": "identity-obj-proxy",
            "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.0",
        "@eslint/css": "^0.9.0",
        "@eslint/js": "^9.30.1",
        "@svgr/webpack": "^8.1.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.0.10",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/testing-library__jest-dom": "^6.0.0",
        "@types/testing-library__react": "^10.2.0",
        "@types/webpack-bundle-analyzer": "^4.7.0",
        "@types/webpack-dev-server": "^4.7.2",
        "@typescript-eslint/eslint-plugin": "^8.35.1",
        "@typescript-eslint/parser": "^8.35.1",
        "babel-jest": "^30.0.4",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "gh-pages": "^6.3.0",
        "globals": "^16.3.0",
        "html-webpack-plugin": "^5.6.3",
        "husky": "^9.1.7",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^30.0.4",
        "jest-environment-jsdom": "^30.0.4",
        "lint-staged": "^16.1.2",
        "mini-css-extract-plugin": "^2.9.2",
        "prettier": "^3.6.2",
        "style-loader": "^4.0.0",
        "ts-jest": "^29.4.0",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.35.1",
        "webpack": "^5.99.9",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version"
        ]
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,md}": [
            "prettier --write",
            "eslint --fix"
        ]
    }
}
