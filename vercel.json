{
    "version": 2,
    "rewrites": [{ "source": "/(.*)", "destination": "/public/index.html" }],
    "build": {
        "env": {
            "NODE_ENV": "production",
            "SKIP_HUSKY": "1",
            "CI": "true"
        }
    },
    "builds": [
        {
            "src": "webpack.config.js",
            "use": "@vercel/webpack",
            "config": {
                "buildCommand": "npm run vercel-build",
                "outputDirectory": "build"
            }
        }
    ]
}
